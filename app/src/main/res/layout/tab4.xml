<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_me_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@mipmap/me_bg"
                android:paddingTop="40dp">
                <!--设置-->
                <RelativeLayout
                    android:id="@+id/rl_set"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/me_set" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="未登录"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/me_bar_bg"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="170dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:weightSum="4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/ll_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/me_bar_qianbao"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp"
                            android:text="我的钱包"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_vip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/me_bar_huiyuan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp"
                            android:text="开通会员"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_collection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/me_bar_shoucang"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp"
                            android:text="我的收藏"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:padding="5dp"
                            android:src="@mipmap/icn_id"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp"
                            android:text="身份认证"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_user_info"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp">

                <View
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/me_head_bg" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_touxiang"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/me_touxiang"
                    />

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_me_top"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <RelativeLayout
                android:id="@+id/rl_user_fabu"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/me_icn_fabu"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的发布"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/me_icn_jiantou_you_gray"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGray"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>
            <!--<RelativeLayout-->
                <!--android:id="@+id/rl_user_tuiguang"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp">-->
                <!--<ImageView-->
                    <!--android:layout_width="25dp"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:src="@mipmap/me_icn_tuiguang"-->
                    <!--android:layout_centerVertical="true"/>-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="我要推广"-->
                    <!--android:textColor="@color/colorBlack"-->
                    <!--android:layout_marginLeft="40dp"-->
                    <!--android:layout_centerVertical="true"/>-->
                <!--<ImageView-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="15dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:src="@mipmap/me_icn_jiantou_you_gray"-->
                    <!--android:layout_centerVertical="true"/>-->
                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0.5dp"-->
                    <!--android:background="@color/colorGray"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginLeft="40dp"/>-->
            <!--</RelativeLayout>-->
            <RelativeLayout
                android:id="@+id/rl_user_zhaofang"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/me_icn_fang"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮我找房"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/me_icn_jiantou_you_gray"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGray"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_user_share"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/me_icn_fenxiang"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享app"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/me_icn_jiantou_you_gray"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGray"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_kefu_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="客服热线：0573-8797-3783"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>