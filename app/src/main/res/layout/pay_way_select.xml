<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icn_close_gray"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/colorShenGray"
                android:textSize="12dp"
                android:text="推荐使用支付宝付款哦"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>


            <RelativeLayout
                android:id="@+id/rl_alipay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/img_alipay_danxuan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icn_danxuan1"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icn_alipay"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorShenGray"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/img_wechat_danxuan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icn_danxuan1"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icn_wechat_pay"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorShenGray"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:text="下一步"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</RelativeLayout>