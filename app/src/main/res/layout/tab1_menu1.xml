<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:padding="5dp"
        android:weightSum="4"
        >
        <RelativeLayout
            android:id="@+id/rl_menu1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_cangfang"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="厂房"
                style="@style/home_menu_text"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_menu2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_cangku"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="仓库"
                style="@style/home_menu_text"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_menu3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_tudi"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="土地"
                style="@style/home_menu_text"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_menu4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_yuanquzhaoshang"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="园区招商"
                style="@style/home_menu_text"
                />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:padding="5dp"
        android:weightSum="4"
        >
        <RelativeLayout
            android:id="@+id/rl_menu5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_qiuzuqiugou"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="求租求购"
                style="@style/home_menu_text"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_menu6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_jingjiren"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="经纪人"
                style="@style/home_menu_text"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_menu7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_bangwoxuanzhi"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="帮我选址"
                style="@style/home_menu_text"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_menu8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/home_menu_xinwenzixun"
                style="@style/home_menu_bg"
                />
            <TextView
                android:text="新闻资讯"
                style="@style/home_menu_text"
                />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>