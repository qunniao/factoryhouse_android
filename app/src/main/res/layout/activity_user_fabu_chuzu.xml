<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/chuzu_productId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="编号：ATW120521"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:layout_marginTop="2px">
        <ImageView
            android:id="@+id/chuzu_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:src="@mipmap/icn_touxiang"/>
        <TextView
            android:id="@+id/chuzu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chuzu_picture"
            android:layout_alignTop="@+id/chuzu_picture"
            android:text="长房出租"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/chuzu_types_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chuzu_picture"
            android:layout_alignBottom="@+id/chuzu_picture"
            android:text="厂房-出租" />
        <TextView
            android:id="@+id/chuzu_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chuzu_picture"
            android:text="2019-03-07 09:10"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/shanchu"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:text="删除"
            android:gravity="center"
            android:background="@drawable/xiajia_textview"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/shangxiajia"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:text="下架"
            android:gravity="center"
            android:background="@drawable/xiajia_textview"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>
</LinearLayout>