<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/title_bar_top"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />

        <LinearLayout
            android:id="@+id/linerlayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mytextview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:text="选择分类"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:background="@mipmap/icn_xiajiantou" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/tiwen_biaoti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorWhite"
                android:hint="问题标题"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/tiwen_wenti"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:gravity="top"
            android:hint="说出你的问题，描述越清晰完整，越容易收到满意的答案哦"
            android:padding="15dp"></EditText>

        <Button
            android:id="@+id/tiwen_fabu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button1"
            android:text="立即发布"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- android:visibility="invisible" -->
    <LinearLayout
