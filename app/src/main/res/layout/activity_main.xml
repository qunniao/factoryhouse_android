<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- 上边主页面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <fragment
                android:id="@+id/tab1"
                android:name="com.kufangdidi.www.fragment.FragmentOne"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:layout_marginBottom="55dp"
                />

            <fragment
                android:id="@+id/tab2"
                android:name="com.kufangdidi.www.fragment.FragmentTwo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:layout_marginBottom="55dp"
                />


            <fragment
                android:id="@+id/tab3"
                android:name="com.kufangdidi.www.fragment.FragmentChat"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:layout_marginBottom="55dp"
                />
            <fragment
                android:id="@+id/tab4"
                android:name="com.kufangdidi.www.fragment.FragmentMe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:layout_marginBottom="55dp"
                />
        </FrameLayout>


        <!-- 底部菜单页面 -->
        <RelativeLayout
            android:id="@+id/bottomRg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorShenGray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:weightSum="5"
                >
                <RelativeLayout
                    android:id="@+id/main_menu_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/main_menu_img_1"
                        style="@style/main_menu_img"
                        android:src="@drawable/main_home"

                        />
                    <TextView
                        android:id="@+id/main_menu_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="首页"
                        android:textColor="@drawable/main_menu_text"
                        android:layout_below="@+id/main_menu_img_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:textSize="10sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_menu_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/main_menu_img_2"
                        android:src="@drawable/main_map"
                        style="@style/main_menu_img"
                        />
                    <TextView
                        android:id="@+id/main_menu_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="选址"
                        android:textColor="@drawable/main_menu_text"
                        android:layout_below="@+id/main_menu_img_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:textSize="10sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_menu_fabu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/main_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@drawable/main_menu_text"
                        android:layout_below="@+id/main_three"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_menu_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/main_menu_img_3"
                        android:src="@drawable/main_chat"
                        style="@style/main_menu_img"
                        />
                    <TextView
                        android:id="@+id/all_unread_number"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="45dp"
                        android:textSize="10sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/unread_msg_red"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@android:color/white"
                        android:elevation="7dp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/main_menu_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="消息"
                        android:textColor="@drawable/main_menu_text"
                        android:layout_below="@+id/main_menu_img_3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:textSize="10sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_menu_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/main_menu_img_4"
                        android:src="@drawable/main_me"
                        style="@style/main_menu_img"
                        />
                    <TextView
                        android:id="@+id/main_menu_text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="我"
                        android:textColor="@drawable/main_menu_text"
                        android:layout_below="@+id/main_menu_img_4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:textSize="10sp"
                        />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_fabu"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:src="@mipmap/icn_main_fabu"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:src="@mipmap/icn_main_fabu_jia"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"
                android:text="发布"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>