<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 灰色阴影 -->
    <item
        android:left="2dp"
        android:top="4dp">
        <shape>
            <solid android:color="#FAD5DD" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- 白色前景 -->
    <item
        android:bottom="7dp"
        android:right="0dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <gradient
                android:angle="90"
                android:startColor="#F4123F"
                android:endColor="#EB7D9E"
                android:type="linear"/>
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>